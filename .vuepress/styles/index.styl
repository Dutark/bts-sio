@media (min-width: 720px){
    .sidebar-button {
        display: block !important;
    }

    .navbar {
        padding-left: 4rem !important;
    }

    .theme-container.sidebar-open > .sidebar{
        top: 0;
        padding-top: 3.6rem;
        transform: translateX(-100%);
        transition: transform 0.2s ease;
    }

    .theme-container.sidebar-open > .page {
        padding-left: 0;
    }
}